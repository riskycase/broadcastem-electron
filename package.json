{
	"name": "broadcastem-electron",
	"version": "0.0.1",
	"description": "Electron.js wrapper for broadcastem-core",
	"main": "index.js",
	"author": "Hrishikesh Patil",
	"license": "GPL-3.0-or-later",
	"scripts": {
		"start": "node ./bin/www",
		"elec": "electron index.js",
		"build": "electron-builder --publish never",
		"release": "electron-builder --publish always"
	},
	"private": false,
	"dependencies": {
		"broadcastem-core": "^3.0.0",
		"electron-store": "^6.0.1",
		"uikit": "^3.5.8"
	},
	"devDependencies": {
		"electron": "^10.1.4",
		"electron-builder": "^22.9.1",
		"husky": "^4.3.0",
		"prettier": "^2.1.2"
	},
	"build": {
		"appId": "com.riskycase.broadcastem-electron",
		"productName": "Broadcast em",
		"files": [
			"**/*",
			"!.*",
			"!*.log"
		],
		"linux": {
			"target": [
				{
					"target": "deb",
					"arch": [
						"x64",
						"ia32"
					]
				},
				{
					"target": "AppImage",
					"arch": [
						"x64",
						"ia32"
					]
				}
			],
			"maintainer": "Hrishikesh Patil",
			"category": "Utility"
		},
		"win": {
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64",
						"ia32"
					]
				},
				{
					"target": "portable",
					"arch": [
						"x64",
						"ia32"
					]
				}
			]
		},
		"mac": {
			"target": [
				{
					"target": "dmg"
				}
			]
		},
		"dmg": {
			"artifactName": "broadcast-em-mac-${version}-${arch}.${ext}"
		},
		"nsis": {
			"artifactName": "broadcast-em-windows-${version}-setup.${ext}"
		},
		"portable": {
			"artifactName": "broadcast-em-windows-${version}-portable.${ext}"
		},
		"deb": {
			"artifactName": "broadcast-em-linux-${version}-${arch}.${ext}"
		},
		"appImage": {
			"artifactName": "broadcast-em-linux-${version}-${arch}.${ext}"
		},
		"publish": [
			"github"
		]
	}
}
